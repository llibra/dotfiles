;;;; -*-Emacs-Lisp-*-
;;;; .skk - SKK initialization file

(setq skk-use-viper t
      skk-use-jisx0201-input-method t)

(when window-system
  (setq skk-cursor-latin-color "#babdb6")
  (setq skk-cursor-hiragana-color "#ef2929")
  (setq skk-cursor-katakana-color "#4e9a06")
  (setq skk-cursor-jisx0201-color "#ad7fa8")
  (setq skk-cursor-abbrev-color "#729fcf")
  (setq skk-cursor-jisx0208-latin-color "#fce94f")
  (set-face-attribute 'skk-henkan-face-default nil
                      :underline "#babdb6"
                      :foreground 'unspecified
                      :background 'unspecified))
